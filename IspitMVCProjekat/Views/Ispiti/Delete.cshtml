@model IspitMVCProjekat.Models.Ispit

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Brisanje ispita";
}

<h4>Brisanje ispita</h4>

<h3>Da li ste sigurni da želite da obrišete podatke o ispitu?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrojIndexa):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrojIndexa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Predmet.ImePredmeta):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Predmet.ImePredmeta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ocena):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ocena)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrojIndexaNavigation.Ime):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrojIndexaNavigation.Ime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrojIndexaNavigation.Prezime):
        </dt>
        <dd class="col-sm-10">
