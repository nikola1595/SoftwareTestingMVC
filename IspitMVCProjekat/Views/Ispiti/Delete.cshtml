    <form asp-action="Delete">
        <input type="hidden" asp-for="IspitId" />
        <input type="submit" value="Obriši ispit" class="btn btn-danger"id="danger" />
    </form>
    <div>
        <br />
        @Html.ActionLink("Nazad na listu ispita", "Index", "Ispiti", null, new {id= "secondary", @class = "btn btn-secondary" })
    </div>

